<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include android:id="@+id/miactionbar"
        layout="@layout/actionbar">
    </include>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:paddingTop="10dp"
        android:rowCount="2">

        <ImageView
            android:id="@+id/ivCiudad"
            android:layout_width="@dimen/bottom_size"
            android:layout_height="@dimen/bottom_size"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/layout_margin"
            app:srcCompat="@mipmap/ciudad" />

        <ImageView
            android:id="@+id/ivPlaya"
            android:layout_width="@dimen/bottom_size"
            android:layout_height="@dimen/bottom_size"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/layout_margin"
            app:srcCompat="@mipmap/playa" />

        <ImageView
            android:id="@+id/ivSelva"
            android:layout_width="@dimen/bottom_size"
            android:layout_height="@dimen/bottom_size"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/layout_margin"
            app:srcCompat="@mipmap/selva" />

        <ImageView
            android:id="@+id/ivmontana"
            android:layout_width="@dimen/bottom_size"
            android:layout_height="@dimen/bottom_size"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/layout_margin"
            app:srcCompat="@mipmap/montana" />

    </GridLayout>


</RelativeLayout>